mixin Icon(path,isColored,className,modLocal)
	- require(`assets/icons/${isColored ? `colored/` : ''}${path}.svg`);

	- modGlobal = "icon--" + path + " "
	if modLocal
		- modLocal = " " + className + "--" + modLocal
	else
		- modLocal = ""
	svg(class="icon " + modGlobal + className + modLocal)
		use(xlink:href=`assets/sprite.svg#${path}`)
