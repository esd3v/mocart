include _mixins.pug

doctype html
html(lang="")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		title Document
		meta(name="description", content="")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel="apple-touch-icon", href="apple-touch-icon.png")
		link(href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet")
		link(href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet")
		link(href="css/main.css" rel="stylesheet")
	body
		header.topnav
			button.topnav__toggleSidebar
				+Icon("menu","topnav__icon")
		nav.sidebar
			ul.sidebar__menu
				li.sidebar__menuItem.sidebar__menuItem--header Support
				li.sidebar__menuItem #[a.sidebar__menuLink(href="tel:+18001234 5678") Contact: #[span.sidebar__number +1800 1234 5678]]
				each item, i in menuLinks[0]
					li.sidebar__menuItem
						+SetMenuLink(0,i,"sidebar__menuLink")
				li.sidebar__menuItem.sidebar__menuItem--header Go Quickly
				each item, i in menuLinks[1]
					li.sidebar__menuItem
						+SetMenuLink(1,i,"sidebar__menuLink")
		div.sidebarOverlay
		header.header
			div.container
				div.row.hidden-sm-down
					div.col-md-12
						address.support
							button.support__collapse Support
							ul.support__menu
								li.support__item Contact &amp; support: #[a.support__link.support__link--number(href="tel:+1800123 5678") +1800 1234 5678]
								each item, i in menuLinks[0]
									li.support__item
										+SetMenuLink(0,i,"support__link")
			div.header__middle
				div.container
					div.row.flex-items-xs-bottom.p-b-2.p-t-1
						div.col-md-3.col-lg-2
							+Icon("logo","logo")
						div.col-md-9.col-lg-10.col-xl-6
							form.searchbar(action="search.php" method="GET")
								select.searchbar__categories(name="category")
									option.searchbar__category(value="all" selected) All categories
									option.searchbar__category(value="fashion") Fashion
									option.searchbar__category(value="booksmedia") Books &amp; media
									option.searchbar__category(value="clearance") Clearance
									option.searchbar__category(value="mobile") Mobile phones
								div.searchbar__search
									input.searchbar__input(type="search" name="search" placeholder="Search entire store here...")
									button.searchbar__button(type="submit")
										+Icon("search","searchbar__icon")
						div.col-xl-4
							div.userbar
								ul.account
									li.account__item
										a.account__link.account__link--myAccount(href="#")
											+Icon("user","account__icon")
											span.account__label My account
									li.account__item
										a.account__link.account__link--trackOrder(href="#")
											+Icon("map-marker","account__icon")
											span.account__label Track order
									li.account__item
										a.account__link.account__link--login(href="#")
											+Icon("padlock","account__icon")
											span.account__label Login
								button.cart
									span.cart__container
										+Icon("shopping-cart","cart__icon")
										span.cart__count 0
										+Icon("arrow-angle","cart__icon","arrow")
			div.header__bottom
				div.container
					div.row
						div.col-lg-12
							nav.filter
								button.shopEverything
									span.shopEverything__container
										span.shopEverything__label Shop everything
										+Icon("arrow-chevron","shopEverything__icon","arrow")
								div.tabs
									a.tabs__tab(href="#") Fashion store
									a.tabs__tab(href="#") Books &amp; media
									a.tabs__tab(href="#") Clearance sale
									a.tabs__tab(href="#") Mobile phones
		div.partFeatures
			div.container
				div.row.flex-items-md-around.p-t-1.p-b-1
					div.col-md-4.col-lg-3
						div.features
							+Icon("plane","features__icon","plane")
							div.features__textBlock
								h5.features__title Free shipping
								h6.features__description In order min $200
					div.col-md-4.col-lg-3
						div.features
							+Icon("time","features__icon","time")
							div.features__textBlock
								h4.features__title 30-days returns
								h5.features__description Money back guarantee
					div.col-md-4.col-lg-3
						div.features
							+Icon("life-preserver","features__icon","lifePreserver")
							div.features__textBlock
								h4.features__title 24/7 support
								h5.features__description Lifestyme support
		div.container
			div.row.m-t-2
				div.col-md-6.col-xl-8
					div.swiper-container
						div.swiper-wrapper
							each slide, i in slides
								+Slide(slides[i].name,slides[i].url)
				div.col-md-6.col-xl-4
					div.deals
						h1.deals__title Today's deals
						h4.deals__endIn End in
						ul.countDown
							li.countDown__digits #[span.countDown__digit.countDown__digit--hours]
							li.countDown__digits #[span.countDown__digit.countDown__digit--minutes]
							li.countDown__digits #[span.countDown__digit.countDown__digit--seconds]
						img.deals__photo(src="img/deals.png" width="172" height="137")
						h5.deals__name Samsung 16GB MicroSD Class 6
						div.deals__prices
							h6.deals__offPrice #[del Rs 499] [30% OFF]
							h3.deals__currentPrice Rs 350
		div.container.m-t-2.hidden-sm-down
			div.goQuickly
				div.goQuickly__labelContainer
					b.goQuickly__label Go quickly to
					+Icon("arrow-circle","goQuickly__icon")
				ul.goQuickly__list
					each item, i in menuLinks[1]
						li.goQuickly__item
							+SetMenuLink(1,i,"goQuickly__link")
		div.container
			div.row
				div.col-md-4.m-t-2
					div.offCategory
						h2.offCategory__header 20% off on Mobiles &amp; more.*
						ul.offCategory__list
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Apple Mobile
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Samsung Mobile
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Micromax Mobile
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Nokia Mobile
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") HTC Mobile
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Sony Mobile
				div.col-md-4.m-t-2
					div.offCategory.offCategory--second
						h2.offCategory__header.offCategory__header--second 50% off on Fashion wear &amp; more.*
						ul.offCategory__list
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Bags and Wallets
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Belts
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Bootees
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Cold Weather
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Jewelry
							li.offCategory__item
								+Icon("arrow-triangle","offCategory__icon")
								a.offCategory__link(href="#") Ties and Hats
				div.col-md-4.m-t-2
					div.offCategory.offCategory--third
						h2.offCategory__header.offCategory__header--third 20% off activewear &amp; more.*
							li.offCategory__item.offCategory__item
								+Icon("arrow-triangle","offCategory__icon","white")
								a.offCategory__link.offCategory__link--third(href="#") Bras
							li.offCategory__item.offCategory__item
								+Icon("arrow-triangle","offCategory__icon","white")
								a.offCategory__link.offCategory__link--third(href="#") Hair Accessories
							li.offCategory__item.offCategory__item
								+Icon("arrow-triangle","offCategory__icon","white")
								a.offCategory__link.offCategory__link--third(href="#") Hars and Gloves
							li.offCategory__item.offCategory__item
								+Icon("arrow-triangle","offCategory__icon","white")
								a.offCategory__link.offCategory__link--third(href="#") Lifestyle
							li.offCategory__item.offCategory__item
								+Icon("arrow-triangle","offCategory__icon","white")
								a.offCategory__link.offCategory__link--third(href="#") Scarves
							li.offCategory__item.offCategory__item
								+Icon("arrow-triangle","offCategory__icon","white")
								a.offCategory__link.offCategory__link--third(href="#") Small Leathers
		script(src="js/main.js")
